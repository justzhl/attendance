<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.uestc.attendance.dao.TeacherMapper">

	<resultMap type="edu.uestc.attendance.dao.TeacherEntity" id="TeacherResultMap">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
	</resultMap>
	
	<!-- 查询 ,根据id -->
	<select id="getItem" parameterType="int" resultType="edu.uestc.attendance.dao.TeacherEntity" resultMap="TeacherResultMap">
		<![CDATA[
			SELECT * 
			from teachers where id = #{id}
		]]> 
	</select>
	
	<!-- 查询,列表 -->
	<select id="getList"  resultType="edu.uestc.attendance.dao.TeacherEntity" resultMap="TeacherResultMap">
		<![CDATA[
			SELECT * from teachers
		]]> 
	</select>
	
</mapper>
